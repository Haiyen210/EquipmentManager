<body class="hold-transition login-page">
    <div class="login-box">

        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="../../index2.html" class="h1"><b>Đăng Nhập</b></a>
            </div>
            <div class="card-body">
                <form action="" method="post">
                    <p class="text-center" style="color:red">@Html.ValidationMessage("Lỗi")</p>
                    <div><span asp-validation-for="Code" class="text-danger"></span></div>
                    <div class="input-group mb-3">
                        <input type="text" asp-for="Code" class="form-control" placeholder="Tên đăng nhập">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                       
                    </div>
                    <div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" asp-for="Password"  class="form-control" placeholder="Mật khẩu">
                        
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        
                    </div>
                  
                    <div class="row">
                        <div class="col-6">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                   Nhớ mật khẩu
                                </label>
                            </div>
                        </div>

                        <div class="col-6">
                            <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                        </div>

                    </div>
                </form>
               
                <p class="mb-1">
                    <a href="forgot-password.html">Quên mật khẩu?</a>
                </p>
                <p class="mb-0">
                    <a href="register.html" class="text-center">Tạo tài khoản</a>
                </p>
            </div>

        </div>

    </div>

</body>

